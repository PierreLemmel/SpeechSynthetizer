<UserControl x:Class="Troikatorz.Speech.GUI.UserControls.SpeechButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:tkt="clr-namespace:Troikatorz.Speech.GUI.UserControls"
             xmlns:vm="clr-namespace:Troikatorz.Speech.GUI.ViewModel"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance vm:SpeechViewModel, IsDesignTimeCreatable=True}">

    <Grid Margin="4" MinHeight="80" MinWidth="80">
        <Button Content="{Binding Title}"/>
    </Grid>

</UserControl>
